<div class="flash-container space-y-2">
    {% for type, messages in app.flashes %}
        <div class="
            px-4 py-3 rounded-lg shadow-md text-white relative
            {% if type == 'success' %} bg-green-500
            {% elseif type == 'danger' %} bg-red-500
            {% elseif type == 'warning' %} bg-yellow-500
            {% else %} bg-gray-600
            {% endif %}
        ">
            <button type="button" class="absolute top-2 right-3 text-white text-xl leading-none" onclick="this.parentElement.remove();">&times;</button>
            {{ messages | join('. ') }}
        </div>
    {% endfor %}
</div>

<style>
.flash-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    width: 320px;
}
</style>
