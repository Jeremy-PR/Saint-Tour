                 <div class="flex items-center">
    <a href="{{ path('app_home') }}" class="flex items-center">
        <img src="{{ asset('images/logo.png') }}" alt="Logo SaintéCityTour" class="h-6 w-auto mr-2">
<span class="text-primary-color-white text-xl font-semibold text-center w-full">SaintéCityTour</span></div>

                    <!-- Menu Hamburger (Mobile) -->
                    <button id="menu-toggle" aria-expanded="false" aria-controls="menu" class="text-primary-color-white bg-green-700 hover:bg-green-800 transition-colors p-2 rounded-md z-20 lg:hidden focus:outline-none">
                        <i class="fas fa-bars" aria-hidden="true"></i>
                    </button>
                    <button id="menu-close" aria-expanded="true" aria-controls="menu" class="text-primary-color-white bg-primary-color-green-main hover:bg-green-800 transition-colors p-2 rounded-md z-20 lg:hidden focus:outline-none hidden">
                        <i class="fas fa-times" aria-hidden="true"></i>
                    </button>

                    <!-- Navigation Links -->
