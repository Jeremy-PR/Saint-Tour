                                        <a href="{{ path('app_profile') }}" class="text-primary-color-white text-lg lg:text-base font-bold hover:text-green-200 transition-colors duration-200 flex items-center">
                                            <i class="fas fa-user mr-2" aria-hidden="true"></i>Profil
                                        </a>
                                    </li>
                                    <li class="py-2 lg:py-0 lg:px-3">
                                        <a href="{{ path('app_logout') }}" class="text-primary-color-white text-lg lg:text-base font-bold hover:text-green-200 transition-colors duration-200 flex items-center">
                                            <i class="fas fa-sign-out-alt mr-2" aria-hidden="true"></i>Déconnexion
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="py-2 lg:py-0 lg:px-3">
                                        <a href="{{ path('app_login') }}" class="text-primary-color-white text-lg lg:text-base font-bold hover:text-green-200 transition-colors duration-200 flex items-center">
                                            <i class="fas fa-sign-in-alt mr-2" aria-hidden="true"></i>Connexion
