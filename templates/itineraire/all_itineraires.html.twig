{% extends 'base.html.twig' %}

{% block title %}Tous les Itinéraires{% endblock %}

{% block body %}
    <div class="min-h-screen bg-cover bg-center bg-fixed" style="background-image: url('{{ asset('images/Saint-etienne-vu-haut.jpg') }}')">
        <div class="container mx-auto my-8 p-6 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-white text-center mb-8">Tous les Itinéraires</h1>

            <!-- Liste des itinéraires -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 px-4 sm:px-6 lg:px-8">
                {% for itineraire in itineraires %}
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-2xl">
                        <div class="p-4">
                            <h2 class="text-lg font-bold text-gray-800 mb-2">{{ itineraire.name }}</h2>
                          <p class="text-sm text-gray-600 mb-4">{{ itineraire.description|raw|striptags|slice(0, 100) ~ '...' }}</p>
                            <a 
                                href="{{ path('itineraire_show', {'id': itineraire.id}) }}" 
                                class="bg-blue-500 text-white px-3 py-1 rounded-md text-sm hover:bg-blue-600 transition-colors"
                            >
                                Voir détails
                            </a>
                        </div>
                    </div>
                {% else %}
                    <p class="col-span-full text-center text-white">Aucun itinéraire disponible pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}