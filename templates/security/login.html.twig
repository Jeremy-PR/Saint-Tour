{% extends 'base.html.twig' %}

{% block body %}
    <section class="bg-cover bg-center h-screen" style="background-image: url('{{ asset('images/vu-de-haut.jpg') }}');">
        <div class="flex items-center justify-center h-full bg-black bg-opacity-50">
            <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
                <h2 class="text-2xl font-semibold text-center mb-4 text-gray-700">Connectez-vous</h2>
               

                <!-- Formulaire de connexion -->
                <form method="post" class="space-y-4">
                    {% if error %}
                        <div class="alert alert-danger text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <!-- Email -->
                    <div class="flex flex-col">
                        <label for="username" class="text-gray-600">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" autocomplete="email" required autofocus>
                      
                    </div>

                    <!-- Mot de passe -->
                    <div class="flex flex-col relative">
                        <label for="password" class="text-gray-600">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required>
                        <i class="fa fa-eye absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer"></i>
                      
                    </div>

                    <!-- Se souvenir de moi -->
                    <div class="flex items-center space-x-2">
                        <input type="checkbox" name="_remember_me" value="1" id="_remember_me" class="text-blue-500">
                        <label for="_remember_me" class="text-sm text-gray-600">Keep me logged in</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Bouton de soumission -->
                    <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-md mt-4 hover:bg-green-700 focus:outline-none">
                        Connexion
                    </button>
                </form>

                <!-- Liens supplémentaires -->
                <div class="flex justify-between mt-4 text-sm">
                    {# <a href="{{ path('app_forgot_password') }}" class="text-blue-500 hover:underline">Forgot your password?</a> #}
                    <a href="{{ path('app_register') }}" class="text-green-600 hover:underline">Créer un compte</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
