{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <section class="bg-cover bg-center h-screen" style="background-image: url('{{ asset('images/vu-de-haut.jpg') }}');">
        <div class="flex items-center justify-center h-full bg-black bg-opacity-50">
            <div class="bg-white bg-opacity-70 backdrop-blur-lg p-8 rounded-lg shadow-lg w-full max-w-md">
                <h2 class="text-3xl font-bold text-center mb-6 text-black">Mon Profil</h2>

                <div class="space-y-4 text-black">
                    <div class="flex flex-col">
                        <span class="text-black font-semibold">Pseudo :</span>
                        <span class="text-lg">{{ user.pseudo }}</span>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-black font-semibold">Email :</span>
                        <span class="text-lg">{{ user.email }}</span>
                    </div>
                </div>

                <div class="mt-6 text-center">
                    <a href="{{ path('app_profile_edit') }}" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-black font-bold rounded-md shadow-lg transition duration-300">
                        Modifier mon profil
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
