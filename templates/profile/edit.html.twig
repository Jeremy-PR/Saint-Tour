{% extends 'base.html.twig' %}

{% block title %}Modifier mon Profil{% endblock %}

{% block body %}
<section class="bg-cover bg-center h-screen" style="background-image: url('{{ asset('images/vu-de-haut.jpg') }}');">
    <div class="flex items-center justify-center h-full bg-black bg-opacity-50">
        <div class="w-full max-w-md bg-white bg-opacity-20 backdrop-blur-lg p-8 rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-center mb-6 text-white">Modifier mon Profil</h2>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                
                <!-- Pseudo -->
                <div class="flex flex-col">
                    {{ form_label(form.pseudo, null, {'label_attr': {'class': 'text-gray-200 font-semibold'}}) }}
                    {{ form_widget(form.pseudo, {'attr': {'class': 'p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
                </div>

                <!-- Email -->
                <div class="flex flex-col">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'text-gray-200 font-semibold'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
                </div>

                <!-- Mot de passe -->
                <div class="flex flex-col">
                    {{ form_label(form.password, null, {'label_attr': {'class': 'text-gray-200 font-semibold'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
                </div>

                <!-- Bouton Enregistrer -->
                <div class="mt-6">
                    <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 rounded-md transition duration-300">
                        Enregistrer
                    </button>
                </div>

            {{ form_end(form) }}

            <!-- Lien Retour -->
            <div class="mt-4 text-center">
                <a href="{{ path('app_profile') }}" class="text-white hover:underline">Retour au profil</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}