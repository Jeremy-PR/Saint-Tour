{% extends 'base.html.twig' %}

{% block title %}Tous les Lieux{% endblock %}

{% block body %}
    <div class="container mx-auto my-8">
        <h1 class="text-3xl font-bold text-center mb-8">Tous les Lieux</h1>

        <!-- Liste des lieux -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {% for lieu in lieux %}
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h2 class="text-xl font-semibold text-gray-700">{{ lieu.name }}</h2>
                    <p class="text-gray-500">{{ lieu.description }}</p>
                    <a href="{{ path('lieu_show', {'id': lieu.id}) }}" class="text-blue-500 hover:underline mt-4 block">Voir plus</a>
                </div>
            {% else %}
                <p class="text-center text-gray-500">Aucun lieu disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
